<div class="container">
  <h1>Enter New Product</h1>
  <form action="/addProduct" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="name">Product Name</label>
    <input type="name" name="name" class="form-control" id="name" placeholder="Enter Product Name">
  </div>
  <div class="form-group">
    <label for="category">Product Category</label>
        <div class="form-check">
      <input class="form-check-input" type="radio" name="category" id="category" value="frame" checked>
      <label class="form-check-label" for="category">
        Frames
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="category" id="category" value="dessert">
      <label class="form-check-label" for="category">
        Dessert Tables
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="category" id="category" value="photobooth">
      <label class="form-check-label" for="category">
        Photobooth
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="category" id="category" value="miscellaneous">
      <label class="form-check-label" for="category">
        Miscellaneous
      </label>
    </div>
  </div>
  <div class="form-group">
    <label for="image">Product Image</label>
    <input type="file" name="image" class="form-control" id="image" placeholder="Select Product Image">
  </div>
  <div class="form-group">
    <label for="price">Price</label>
    <input type="name" name="price" class="form-control" id="price" placeholder="Enter Product Price (ex. 22.99)">
  </div>
  <button type="submit" class="btn btn-primary">Add Product</button>
</form>
</div>
