<div class="container">
  <h1>Current Products</h1>
  <div class="row" style="margin-top: 5%;">
  <% for (var i = 0; i < products.length; i++) { %>
    <div class="col">
    <div class="card" style="max-height: 22em; margin-bottom: 7%;">
      <div class="card-body">
        <h5 class="card-title"><%= products[i].name %></h5>
        <p class="card-text">$<%= products[i].price %></p>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#removeProductModal">
          Remove Product
        </button>
        <% include ../removeProductModal/index.ejs %>
      </div>
    </div>
  </div>
  <% } %>
</div>
</div>
