<div class="container">
  <h1 class="text-center" style="margin-top: 5%; margin-bottom: 5%;"><%= product.name %></h1>
  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <img class="card-img-top" src="https://elan-wedding-services.herokuapp.com/<%= product.image %>" alt="Card image cap">
        <div class="card-body">
          <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <p class="card-text"><b>Price:</b> <%= product.price %></p>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#contactModal">
            Ask about this product
          </button>
          <% include ../contactModal/index.ejs %>
          <form action="/addToCart" method="post">
            <input type="hidden" name="name" value="<%= product.name %>">
            <input type="hidden" name="price" value="<%= product.price %>">
            <button type="submit" class="btn btn-primary">
              Add to Cart
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
