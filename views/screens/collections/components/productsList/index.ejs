<div class="container text-center">
  <div class="row" style="margin-top: 5%;">
  <% for (var i = 0; i < products.length; i++) { %>
    <div class="col">
    <div class="card" style="max-height: 22em; margin-bottom: 7%;">
      <img class="card-img-top" src="https://elan-wedding-services.herokuapp.com/<%= products[i].image %>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= products[i].name %></h5>
        <p class="card-text">$<%= products[i].price %></p>
        <a href="/product/<%= products[i]._id %>" class="btn btn-primary">View Product</a>
      </div>
    </div>
  </div>
  <% } %>
</div>
</div>
